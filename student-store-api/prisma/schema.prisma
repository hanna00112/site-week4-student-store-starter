generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Int 
  image_URL   String
  category    Int
}


// I HAVE NOT ADDED TO MY PGADMIN
model orders {
  order_id    Int      @id @default(autoincrement())
  customer_id Int
  total_price Int
  status      String
  created_at  DateTime @default(now())
}

// I HAVE NOT ADDED TO MY PGADMIN
model order_items {
  order_item_id     Int   @id @default(autoincrement())
  order_id          Int   @relation(fields: [orders.order_id], references: [order_id]) 
  product_id        Int   @relation(fields: [products.id], references: [id])
  quantity          Int 
  price             Int 
}
